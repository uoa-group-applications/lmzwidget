<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd
  ">

    <context:annotation-config />

    <!-- add @Widget to the things that need to be automatically scanned for injection stuff -->
    <context:component-scan base-package="nz.ac.auckland" use-default-filters="false">
        <context:include-filter type="annotation" expression="nz.ac.auckland.lmzwidget.generator.annotations.Widget"/>
    </context:component-scan>

</beans>